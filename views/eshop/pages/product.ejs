<%- include("../partials/header"), {title: title}; %>

<h1>This is the stuff we offer</h1>


<p><i>To output the content of the Products table.</i></p>

<table class="tableid">
    <thead>
        <tr>
            <th>product_id</th>
            <th>name</th>
            <th>category</th>
            <th>price</th>
            <th>amount</th>
            <th>Action</th>
        </tr>
    </thead>
<% for (const row of res) { %>
    <tbody>
        <tr>
            <td><%= row.product_id %></td>
            <td><%= row.name %></td>
            <td><%= row.category%></td>
            <td><%= row.price %></td>
            <td><%= row.amount %></td>
            <td>
                <a href="/update/<%= row.product_id %>">Update</a>
                <a href="/delete/<%= row.product_id %>">Delete</a>
            </td>
        </tr>
    </tbody>
<% }; %>

</table>
<%- include("../partials/footer"); %>

<%- include("../partials/header"), {title: title}; %>

<h1>Create new order</h1>



<table class="tableid">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Stock status</th>
            <th>Put to shopping cart</th>
        </tr>
    </thead>
<% for (const row of res) { %>
    
    
    <tbody>
        <tr>
            <td><%= row.product_id%></td>
            <td><%= row.name %></td>
            <td><%= row.price %></td>
            <td><%= row.amount %></td>
            <form action="/order_row/create" method="post">
            <td class="select">
                <input type="hidden" name="order_id" value="<%= orderId %>">
                <input type="hidden" name="product_id" value="<%= row.product_id %>">
                <input type="number" name="quantity" min="1" max="<%= row.amount %>" value="1">
                <input type="submit" value="Add to cart">
            </td>
            </form>
            
        </tr>
    </tbody>
    
<% }; %>

</table>



<%- include("../partials/footer"); %>
